<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Fighting Steel Dynamic Campaign Manager</title>
    {% block stylesheets %}
        <link href="{{ asset('css/main.css') }}" rel="stylesheet" />
    {% endblock %}
    <script src="{{ asset('js/vendor/require/require-2.3.5.js') }}"></script>
    <script src="{{ asset('js/app/main.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        var scenarios = {};
    </script>
</head>
<body>
    <div id="actionBox">
        <div id="actionBoxTitle">Scenarios</div>
        <div id="actionList">
            <div id="scenariosList">
                {% for key, scenario in scenarios %}
                    <p id=scenarioItem_"{{ key }}">{{ scenario.title }}</p>
                    <script type="text/javascript">
                        scenarios.{{ key }} = "{{ scenario.shortDescription }}";
                    </script>
                {% endfor %}
            </div>
            <div id="scenarioDescription"></div>
        </div>
    </div>
</body>
</html>